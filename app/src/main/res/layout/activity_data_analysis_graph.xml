<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jgh.myapplication.Activity.DataAnalysisGraph">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/mainLayout"
            android:layout_width="fill_parent"
            android:layout_height="170dp"
            android:layout_column="0"
            android:layout_row="0"
            android:orientation="vertical"
            android:background="#FFFFFF">
            <GridLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/sin_capital"
                    android:layout_column="0"
                    android:layout_width="170dp"
                    android:layout_height="30dp"
                    app:layout_constraintLeft_toRightOf="parent"></Spinner>
                <Spinner
                    android:id="@+id/sin_local"
                    android:layout_column="1"
                    android:layout_width="170dp"
                    android:layout_height="30dp"
                    app:layout_constraintLeft_toRightOf="parent"></Spinner>
            </GridLayout>
            <GridLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/chart_compare"
                    android:layout_width="180dp"
                    android:layout_height="145dp"
                    android:layout_column="0"></com.github.mikephil.charting.charts.BarChart>
                <TextView
                    android:id="@+id/txt_compare"
                    android:layout_width="180dp"
                    android:layout_height="fill_parent"
                    android:lines="10"
                    android:maxLines="10"
                    android:scrollbars="vertical" />
            </GridLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="4dp"
            android:layout_column="0"
            android:layout_row="1"
            android:orientation="vertical"
            android:background="#000000">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/mainLayout1"
            android:layout_width="fill_parent"
            android:layout_height="144dp"
            android:layout_column="0"
            android:layout_row="2"
            android:orientation="vertical"
            android:background="#FFFFFF">

            <GridLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/chart_standard1"
                    android:layout_width="180dp"
                    android:layout_height="145dp"
                    android:layout_column="0"></com.github.mikephil.charting.charts.BarChart>
                <TextView
                    android:id="@+id/txt_standard1"
                    android:layout_width="180dp"
                    android:layout_height="fill_parent"
                    android:lines="10"
                    android:maxLines="10"
                    android:scrollbars="vertical" />

            </GridLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="4dp"
            android:layout_column="0"
            android:layout_row="3"
            android:orientation="vertical"
            android:background="#000000"/>
        <LinearLayout
            android:id="@+id/mainLayout2"
            android:layout_width="fill_parent"
            android:layout_height="144dp"
            android:layout_column="0"
            android:layout_row="4"
            android:orientation="vertical"
            android:background="#FFFFFF">
            <GridLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_column="3"

                android:layout_row ="5">

                <GridLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/chart_standard2"
                        android:layout_width="180dp"
                        android:layout_height="145dp"
                        android:layout_column="0"></com.github.mikephil.charting.charts.BarChart>
                    <TextView
                        android:id="@+id/txt_standard2"
                        android:layout_width="180dp"
                        android:layout_height="fill_parent"
                        android:lines="10"
                        android:maxLines="10"
                        android:scrollbars="vertical" />
                </GridLayout>
            </GridLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="4dp"
            android:layout_column="0"
            android:layout_row="1"
            android:orientation="vertical"
            android:background="#000000">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/mainLayout3"
            android:layout_width="fill_parent"
            android:layout_height="144dp"
            android:layout_column="0"
            android:layout_row="4"
            android:orientation="vertical"
            android:background="#FFFFFF">
            <GridLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_column="3"

                android:layout_row ="5">

                <GridLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/chart_standard3"
                        android:layout_width="180dp"
                        android:layout_height="145dp"
                        android:layout_column="0"></com.github.mikephil.charting.charts.BarChart>
                    <TextView
                        android:id="@+id/txt_standard3"
                        android:layout_width="180dp"
                        android:layout_height="fill_parent"
                        android:lines="10"
                        android:maxLines="10"
                        android:scrollbars="vertical" />
                </GridLayout>
            </GridLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>