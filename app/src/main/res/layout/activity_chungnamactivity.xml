<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jgh.myapplication.Activity.chungnamactivity">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000000"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">
        <TextView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:text="충청남도"
            android:textSize="40dp"
            android:textColor="#F6F6F6"
            android:layout_marginTop="550dp"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/chungnam"/>

        <Button
            android:id="@+id/btn_Cheonan"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_marginLeft="235dp"
            android:layout_marginTop="200dp"
            android:background="#00ff0000"
            android:onClick="onClickCheonan"
            android:text="천안"
            android:textColor="#F6F6F6"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_Sejong"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_marginLeft="235dp"
            android:layout_marginTop="270dp"
            android:background="#00ff0000"
            android:onClick="onClickSejong"
            android:text="세종"
            android:textColor="#F6F6F6"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_Gongju"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="310dp"
            android:background="#00ff0000"
            android:onClick="onClickGongju"
            android:text="공주"
            android:textColor="#F6F6F6"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_Asan"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="190dp"
            android:background="#00ff0000"
            android:onClick="onClickAsan"
            android:text="아산"
            android:textColor="#F6F6F6"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_Dangjin"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="165dp"
            android:background="#00ff0000"
            android:onClick="onClickDangjin"
            android:text="당진"
            android:textColor="#F6F6F6"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_Yesann"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="250dp"
            android:background="#00ff0000"
            android:onClick="onClickYesan"
            android:text="예산"
            android:textColor="#F6F6F6"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_Boryeong"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="380dp"
            android:background="#00ff0000"
            android:onClick="onClickBoryeong"
            android:text="보령"
            android:textColor="#F6F6F6"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_Seosan"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="210dp"
            android:background="#00ff0000"
            android:onClick="onClickSeosan"
            android:text="서산"
            android:textColor="#F6F6F6"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_Taean"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="210dp"
            android:background="#00ff0000"
            android:onClick="onClickTaean"
            android:text="태안"
            android:textColor="#F6F6F6"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_Hongseong"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="295dp"
            android:background="#00ff0000"
            android:onClick="onClickHongseong"
            android:text="홍성"
            android:textColor="#F6F6F6"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_Cheongyang"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="340dp"
            android:background="#00ff0000"
            android:onClick="onClickCheongyang"
            android:text="청양"
            android:textColor="#F6F6F6"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_Buyeo"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_marginLeft="155dp"
            android:layout_marginTop="415dp"
            android:background="#00ff0000"
            android:onClick="onClickBuyeo"
            android:text="부여"
            android:textColor="#F6F6F6"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_Gyeryong"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_marginLeft="235dp"
            android:layout_marginTop="395dp"
            android:background="#00ff0000"
            android:onClick="onClickGyeryong"
            android:text="계룡"
            android:textColor="#F6F6F6"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_Nonsan"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="435dp"
            android:background="#00ff0000"
            android:onClick="onClickNonsan"
            android:text="논산"
            android:textColor="#F6F6F6"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_Geumsan"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="460dp"
            android:background="#00ff0000"
            android:onClick="onClickGeumsan"
            android:text="금산"
            android:textColor="#F6F6F6"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_Seocheon"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="470dp"
            android:background="#00ff0000"
            android:onClick="onClickSeocheon"
            android:text="서천"
            android:textColor="#F6F6F6"
            android:textStyle="bold" />
        <GridLayout
            android:layout_width="165dp"
            android:layout_height="130dp"
            android:background="@drawable/border"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="195dp">
            <TextView
                android:text="정보"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_row="0"
                android:layout_column="0"
                />

            <TextView
                android:text="CCTV 대수  :"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_row="1"
                android:layout_column="0"
                />
            <TextView
                android:id="@+id/txt_cctvcount"
                android:text="0 대"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_row="1"
                android:layout_column="1"/>
            <TextView
                android:text="보안등 대수 :"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_row="2"
                android:layout_column="0"
                />
            <TextView
                android:id="@+id/txt_lampcount"
                android:text="0 대"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_row="2"
                android:layout_column="1"/>
            <TextView
                android:text="인구수      :"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_row="3"
                android:layout_column="0"
                />
            <TextView
                android:id="@+id/txt_Population"
                android:text="0 명"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_row="3"
                android:layout_column="1"/>
            <TextView
                android:text="범죄건 수 :"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_row="4"
                android:layout_column="0"
                />
            <TextView
                android:id="@+id/txt_Crime"
                android:text="0 건"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_row="4"
                android:layout_column="1"/>
        </GridLayout>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_alignBottom="@+id/btn_Jecheon"
            android:layout_alignLeft="@+id/imageView"
            android:layout_alignStart="@+id/imageView"
            android:layout_marginBottom="40dp"
            android:background="@drawable/col" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
